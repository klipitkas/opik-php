{
    "name": "comet-ml/opik",
    "description": "Opik PHP SDK - LLM observability and evaluation platform",
    "version": "0.2.0",
    "type": "library",
    "license": "Apache-2.0",
    "keywords": [
        "opik",
        "sdk",
        "php",
        "llm",
        "observability",
        "tracing",
        "evaluation",
        "comet"
    ],
    "homepage": "https://www.comet.com/docs/opik/",
    "authors": [
        {
            "name": "Comet",
            "email": "support@comet.com",
            "homepage": "https://github.com/comet-ml"
        }
    ],
    "support": {
        "issues": "https://github.com/comet-ml/opik/issues",
        "source": "https://github.com/comet-ml/opik",
        "docs": "https://www.comet.com/docs/opik/"
    },
    "require": {
        "php": "^8.4",
        "guzzlehttp/guzzle": "^7.9",
        "ramsey/uuid": "^4.7",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.64"
    },
    "autoload": {
        "psr-4": {
            "Opik\\": "src/Opik/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Opik\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=unit",
        "test:integration": "phpunit --testsuite=integration",
        "analyse": "phpstan analyse",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
