{
  "name": "klipitkas/opik-php",
  "description": "Opik PHP SDK - LLM observability and evaluation platform",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "opik",
    "sdk",
    "php",
    "llm",
    "observability",
    "tracing",
    "evaluation",
    "comet"
  ],
  "homepage": "https://github.com/klipitkas/opik-php",
  "authors": [
    {
      "name": "Konstantinos Lypitkas",
      "homepage": "https://github.com/klipitkas"
    }
  ],
  "support": {
    "issues": "https://github.com/klipitkas/opik-php/issues",
    "source": "https://github.com/klipitkas/opik-php",
    "docs": "https://www.comet.com/docs/opik/"
  },
  "require": {
    "php": "^8.1",
    "guzzlehttp/guzzle": "^7.9",
    "ramsey/uuid": "^4.7",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5 || ^11.0",
    "phpstan/phpstan": "^2.0",
    "friendsofphp/php-cs-fixer": "^3.64"
  },
  "autoload": {
    "psr-4": {
      "Opik\\": "src/Opik/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Opik\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:unit": "phpunit --testsuite=unit",
    "test:integration": "phpunit --testsuite=integration",
    "test:coverage": "phpunit --coverage-html coverage/html --coverage-text",
    "analyse": "phpstan analyse",
    "format": "php-cs-fixer fix",
    "format:check": "php-cs-fixer fix --dry-run --diff",
    "lint": [
      "@analyse",
      "@format:check"
    ]
  },
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "optimize-autoloader": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
